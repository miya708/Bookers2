<main>
  <p id="notice">Welcome! You have signed up successfully.</p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2> User info </h2>

        <%= image_tag @user.get_profile_image(100,100) %>

        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <div class="row">
          <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        </div>



       <h2 class="mt-3">New book</h2>
       <%= form_with model: @book do |f| %>

      <div class="form-group">
       <label>Title</label>
       <div><%= f.text_field :title %></div>
        <div class="row">
         <div class="col-xs-4">

         </div>
        </div>
      </div>



	     <div class="form-group">
       <label for="book_opinion">Opinion</label>
       <div><%= f.text_area :body %></div>
       </div>

        <div class="form-group">
              <%= f.submit "Create Book", class: "btn btn-success" %>

        </div>
        <% end %>



    </div>





    <div class="col-md-8 offset-md-1">

     <h2>Book detail</h2>
      <table class="table">
      <tbody>



        <tr>




      <td><%= link_to user_path(@book.user_id) do %>
          <%= image_tag @user.get_profile_image(70,70) %>
          <%=  @book.user.name  %>
      <% end %>
      </td>




          <td><%= link_to @book.title, book_path(@book.id)%></td>

          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
          <td><%= link_to "Edit",edit_book_path(@book.id),class:"btn btn-sm btn-success edit_book_#{@book.id}" %></td>
          <td><%= link_to "Destroy",book_path(@book.id),method: :delete,"data-confirm" => "本当に削除しますか？",class:"btn btn-sm btn-danger destroy_book_#{@book.id}" %></td>




          <% end %>







            </tr>
           </tbody>
          </table>
      </div>
    </div>
  </div>

</main>